                Margin="20,13,20,13">H
        </Button>
        
        <Button Name="btnJ" 
                FontFamily="Arial Black"
                Background="BlanchedAlmond"
                Foreground="SaddleBrown"
                BorderThickness="0"
                Grid.Row="4"
                Grid.Column="11"
                Grid.ColumnSpan="2"
               Margin="20,13,20,13">J
        </Button>
        
        <Button Name="btnK" 
                FontFamily="Arial Black"
                Background="BlanchedAlmond"
                Foreground="SaddleBrown"
                BorderThickness="0"
                Grid.Row="4"
                Grid.Column="12"
                Grid.ColumnSpan="2"
                Margin="20,13,20,13">K
        </Button>

        <Button Name="btnL" 
                FontFamily="Arial Black"
                Background="BlanchedAlmond"
                Foreground="SaddleBrown"
                BorderThickness="0"
                Grid.Row="4"
                Grid.Column="13"
                Grid.ColumnSpan="2"
               Margin="20,13,20,13">L
        </Button>


        <Button Name="btnZ" 
                FontFamily="Arial Black"
                Background="BlanchedAlmond"
                Foreground="SaddleBrown"
                BorderThickness="0"
                Grid.Row="4"
                Grid.RowSpan="5"
                Grid.Column="6"
              Grid.ColumnSpan="2"
               Margin="20,60,20,33">Z
        </Button>

        <Button Name="btnX" 
                FontFamily="Arial Black"
                Background="BlanchedAlmond"
                Foreground="SaddleBrown"
                BorderThickness="0"
                Grid.Row="4"
                Grid.RowSpan="5"
                Grid.Column="7"
               Grid.ColumnSpan="2"
               Margin="20,60,20,33">X
        </Button>
        
        <Button Name="btnC" 
                FontFamily="Arial Black"
                Background="BlanchedAlmond"
                Foreground="SaddleBrown"
                BorderThickness="0"
                Grid.Row="4"
