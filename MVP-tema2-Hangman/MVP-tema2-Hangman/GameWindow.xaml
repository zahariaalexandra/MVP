<Window x:Class="MVP_tema2_Hangman.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVP_tema2_Hangman"
        mc:Ignorable="d"
        Background="DeepSkyBlue"
        Title="Hangman" 
        Height="450" 
        Width="650"
        Icon="Icon.png">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Menu Name="menuPrincipal" 
              VerticalAlignment="Top"
              Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="15"
              FontFamily="Arial"
              Background="BlanchedAlmond"
              Foreground="SaddleBrown"
              FontSize="15"
              BorderThickness="0">
            
            <MenuItem Header="File">
                <MenuItem Header="New game"/>
                <MenuItem Header="Open game"/>
                <MenuItem Header="Save game"/>
                <MenuItem Header="Statistics"/>
                <MenuItem Header="Exit"/>
            </MenuItem>

            <MenuItem Header="Categories">
                <MenuItem Header="All categories"/>
                <MenuItem Header="Movies"/>
                <MenuItem Header="States"/>
                <MenuItem Header="Mountains"/>
                <MenuItem Header="Rivers"/>
            </MenuItem>

            <MenuItem Header="Help">
                <MenuItem Header="About"/>
                <MenuItem Header="Info"/>
            </MenuItem>
        </Menu>

        <Label Name="lblLevel" 
               Background="DeepSkyBlue" 
               Foreground="SaddleBrown"
               FontFamily="Arial Black"
               FontSize="20" 
               Grid.Row="0"
               Grid.Column="0"
               Grid.ColumnSpan="7"
               Margin="15,30,0,0">Level:
        </Label>
        
        <Label Name="lblCategory" 
               Background="DeepSkyBlue"
               Foreground="SaddleBrown"
               FontFamily="Arial Black"
               FontSize="20" 
               Grid.Row="1"
               Grid.Column="0"
               Grid.ColumnSpan="8"
               Margin="15,0,0,30">Category:
        </Label>

        <Label Name="lblTimer"
               Background="DeepSkyBlue"
               Foreground="SaddleBrown"
               FontFamily="Arial Black"
               FontSize="21"
               Grid.Row="0"
               Grid.Column="13"
               Grid.ColumnSpan="2"
               Margin="0,30,0,0">00:00
        </Label>

        <Label Name="lblPlayer"
               Background="DeepSkyBlue"
               Foreground="SaddleBrown"
               FontFamily="Arial Black"
               FontSize="20"
               Grid.Row="1"
               Grid.Column="8"
               Grid.ColumnSpan="7"
               Margin="0,0,10,30"
               HorizontalContentAlignment="Right">Player:
        </Label>

        <Image Name="imgProfile"
               Grid.Row="0"
               Grid.Column="7"
               Margin="0,15,0,0"/>

        <TextBox Name="txtWord" 
                 FontSize="35" 
                 Background="DeepSkyBlue"
                 Foreground="SaddleBrown"
                 FontFamily="Arial Black"
                 Grid.Row="1"
                 Grid.RowSpan="2"
                 Grid.Column="0"
                 Grid.ColumnSpan="15"
                 Margin="15,40,15,10"
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center">_ _ d _
        </TextBox>

        <Image Name="imgProgress" 
                   Stretch="Uniform" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center"
                   Grid.Row="3"
                   Grid.RowSpan="3"
                   Grid.Column="0"
                   Grid.ColumnSpan="5"
                   Source="ImgStartProgress.png"/>

        <Button Name="btnQ" 
                FontFamily="Arial Black"
                Background="BlanchedAlmond"
                Foreground="SaddleBrown"
                BorderThickness="0"
                Grid.Row="3"
                Grid.RowSpan="2"
                Grid.Column="5"
                Margin="1,33,1,60">Q
        </Button>
        
        <Button Name="btnW" 
                FontFamily="Arial Black"
                Background="BlanchedAlmond"
                Foreground="SaddleBrown"
                BorderThickness="0"
                Grid.Row="3"
                 Grid.RowSpan="2"
                Grid.Column="6"
                Margin="1,33,1,60">W
        </Button>
        
        <Button Name="btnE" 
                FontFamily="Arial Black"
                Background="BlanchedAlmond"
                Foreground="SaddleBrown"
                BorderThickness="0"
                Grid.Row="3"
                Grid.RowSpan="2"
                Grid.Column="7"
                Margin="1,33,1,60">E
        </Button>
        
        <Button Name="btnR" 
                FontFamily="Arial Black"
                Background="BlanchedAlmond"
                Foreground="SaddleBrown"
                BorderThickness="0"
                Grid.Row="3"
                Grid.RowSpan="2"
                Grid.Column="8"
                Margin="1,33,1,60">R
        </Button>
        
        <Button Name="btnT" 
                FontFamily="Arial Black"
                Background="BlanchedAlmond"
                Foreground="SaddleBrown"
                BorderThickness="0"
                Grid.Row="3"
                Grid.RowSpan="2"
                Grid.Column="9"
                Margin="1,33,1,60">T
        </Button>
        
        <Button Name="btnY" 
                FontFamily="Arial Black"
                Background="BlanchedAlmond"
                Foreground="SaddleBrown"
                BorderThickness="0"
                Grid.Row="3"
                Grid.RowSpan="2"
                Grid.Column="10"
                Margin="1,33,1,60">Y
        </Button>
        
        <Button Name="btnU" 
                FontFamily="Arial Black"
                Background="BlanchedAlmond"
                Foreground="SaddleBrown"
                BorderThickness="0"
                Grid.Row="3"
                Grid.RowSpan="2"
                Grid.Column="11"
                Margin="1,33,1,60">U
        </Button>
        
        <Button Name="btnI" 
                FontFamily="Arial Black"
                Background="BlanchedAlmond"
                Foreground="SaddleBrown"
                BorderThickness="0"
                Grid.Row="3"
                Grid.RowSpan="2"
                Grid.Column="12"
                Margin="1,33,1,60">I
        </Button>
        
        <Button Name="btnO" 
                FontFamily="Arial Black"
                Background="BlanchedAlmond"
                Foreground="SaddleBrown"
                BorderThickness="0"
                Grid.Row="3"
                Grid.RowSpan="2"
                Grid.Column="13"
                Margin="1,33,1,60">O
        </Button>
        
        <Button Name="btnP" 
                FontFamily="Arial Black"
                Background="BlanchedAlmond"
                Foreground="SaddleBrown"
                BorderThickness="0"
                Grid.Row="3"
                Grid.RowSpan="2"
                Grid.Column="14"
                Margin="1,33,1,60">P
        </Button>

        
        <Button Name="btnA" 
                FontFamily="Arial Black"
                Background="BlanchedAlmond"
                Foreground="SaddleBrown"
                BorderThickness="0"
                Grid.Row="4"
                Grid.Column="5"
                Grid.ColumnSpan="2"
                Margin="20,13,20,13">A
        </Button>
        
        <Button Name="btnS" 
                FontFamily="Arial Black"
                Background="BlanchedAlmond"
