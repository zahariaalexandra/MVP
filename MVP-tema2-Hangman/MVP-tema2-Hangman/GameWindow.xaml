               Grid.ColumnSpan="2"
               Margin="20,60,20,33">V
        </Button>
        
        <Button Name="btnB" 
                FontFamily="Arial Black"
                Background="BlanchedAlmond"
                Foreground="SaddleBrown"
                BorderThickness="0"
                Grid.Row="4"
                Grid.RowSpan="5"
                Grid.Column="10"
               Grid.ColumnSpan="2"
               Margin="20,60,20,33">B
        </Button>
        
        <Button Name="btnN" 
                FontFamily="Arial Black"
                Background="BlanchedAlmond"
                Foreground="SaddleBrown"
                BorderThickness="0"
                Grid.Row="4"
                Grid.RowSpan="5"
                Grid.Column="11"
             Grid.ColumnSpan="2"
               Margin="20,60,20,33">N
        </Button>
        
        <Button Name="btnM" 
                FontFamily="Arial Black"
                Background="BlanchedAlmond"
                Foreground="SaddleBrown"
                BorderThickness="0"
                Grid.Row="4"
                Grid.RowSpan="5"
                Grid.Column="12"
              Grid.ColumnSpan="2"
               Margin="20,60,20,33">M
        </Button>
        
    </Grid>
</Window>
